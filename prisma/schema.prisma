generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
enum Role {
  Teacher
  Student
}

model User{
  id Int @id @default(autoincrement())
  name String @unique
  userId Int @unique
  email String @unique
  telephone String
  password String
  role Role @default(Teacher)
  profile Profile ?
  ownedLevels Level[] @relation("OwnerLevel")
  levels Level[]
}
model Profile{
  id Int @id @default(autoincrement())
  title String
  about String
  user User @relation(fields: [userId],references: [id])
  userId Int @unique
}
model Level{
  id Int @id @default(autoincrement())
  name String
  owner User @relation("OwnerLevel",fields: [ownerId],references: [id])
  ownerId Int @unique
  students User[]
  chatpers Chapter[] @relation("level")
}
model Chapter {
  id Int @id @default(autoincrement())
  name String
  level Level @relation("level",fields: [levelId],references: [id])
  levelId Int @unique
  qustions Json?
}
model Question{
  id Int @id @default(autoincrement())

}